<div
  class="flex lg:flex-row-reverse justify-center items-center lg:items-stretch lg:justify-start h-screen w-screen bg-gray-900 relative"
>

  <div
    class="h-16 w-full flex items-center justify-center m-8 w-60 absolute top-0 left-0 block lg:hidden"
  >
    <img class="w-8 h-auto object-cover mr-1" src="/imgs/icon_indiec.png" alt="" />
    <h1 class="text-xl text-white">Indi<span class="font-bold text-blue-500">Ec</span></h1>
  </div>

  <div class="absolute bottom-3 w-full">
  </div>
  <div class="flex lg:pr-8 items-center justify-center text-center w-1/2 relative">

    <div class="w-full lg:w-1/2">

      <section class="bg-white dark:bg-gray-900">
        <div class="container flex items-center justify-center min-h-screen px-6 mx-auto">
          <form
            class="w-full max-w-md form_signup"
            id="signup_form"
            action="/{{APP_NAME}}/auth/signup"
            method="POST"
          >
            <div class="flex justify-center mx-auto">
              <img class="w-auto h-7 sm:h-8 opacity-50" src="/imgs/icon_indiec.png" alt="" />
            </div>

            <div class="flex items-center justify-center mt-6">
              <a
                href="/{{APP_NAME}}/auth/signin"
                class="w-1/3 pb-4 font-medium text-center text-gray-500 capitalize border-b dark:border-gray-400 dark:text-gray-300"
              >
                Inicia Sesión
              </a>

              <a
                href="/{{APP_NAME}}/auth/signup"
                class="w-1/3 pb-4 font-medium text-center text-gray-800 capitalize border-b-2 border-blue-500 dark:border-blue-400 dark:text-white"
              >
                Registrate
              </a>
            </div>

            <div class="relative flex items-center mt-8">
              <span class="absolute">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>

              <input
                id="identification"
                name="identification"
                type="text"
                class="block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                placeholder="Identifiación"
              />
            </div>

            <div class="relative flex items-center mt-4">
              <span class="absolute">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>

              <input
                id="names"
                name="names"
                type="text"
                class="block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                placeholder="Nombres"
              />
            </div>

            <div class="relative flex items-center mt-4">
              <span class="absolute">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>

              <input
                id="surnames"
                name="surnames"
                type="text"
                class="block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                placeholder="Apellidos"
              />
            </div>

            <div class="relative flex items-center mt-4">
              <span class="absolute">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>

              <input
                id="nickname"
                name="nickname"
                type="text"
                class="block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                placeholder="Alias"
              />
            </div>

            <div class="relative flex items-center mt-6">
              <span class="absolute">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>

              <input
                id="username"
                name="username"
                type="text"
                class="block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                placeholder="Usuario"
              />
            </div>

            <div class="relative flex items-center mt-4">
              <span class="absolute">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  />
                </svg>
              </span>

              <input
                id="password"
                name="password"
                type="password"
                class="block w-full px-10 py-3 text-gray-700 bg-white border rounded-lg dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40"
                placeholder="Password"
              />
            </div>

            <div class="mt-6">
              <button
                class="w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50"
              >
                Registrate
              </button>

              <div class="mt-6 text-center">
                <a
                  href="/{{APP_NAME}}/auth/signin"
                  class="text-sm text-blue-500 hover:underline dark:text-blue-400"
                >
                  ¿Ya tienes una cuenta?
                </a>
              </div>
            </div>
          </form>
        </div>
      </section>

    </div>
  </div>

  <div
    class="hidden overflow-hidden lg:block lg:w-1/2 relative"
    style="clip-path: polygon(0 0, 90% 0, 100% 100%, 0 100%)"
  >
    <a
      class="h-16 flex items-center justify-center m-8 absolute top-0 left-0 !z-20 cursor-pointer hover:scale-105 transition-all"
    >
      <img class="w-8 h-auto object-cover mr-1" src="/imgs/icon_indiec.png" alt="" />
      <h1 class="text-xl text-white">Indi<span class="font-bold text-blue-500">Ec</span></h1>
    </a>

    <div
      class="h-full object-cover bg-[url('https://img3.wallspic.com/attachments/originals/8/2/5/9/3/139528-sica-concierto_de_rock-rendimiento-evento-verde-5993x3512.jpg')] bg-center bg-cover bg-no-repeat"
    >
      <div class="h-full bg-[#37415180] transition-all duration-500"></div>
    </div>
  </div>
</div>