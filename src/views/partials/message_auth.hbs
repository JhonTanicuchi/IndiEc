{{#if auth_info_msg}}
<div class="message_auth info" id="message">
    <div>
        <i class="fa-solid fa-circle-exclamation"></i>
        <h1>{{auth_info_msg}}</h1>
    </div>
    <i class="fa-solid fa-xmark" onclick="hide_message()"></i>
</div>
{{/if}}

{{#if auth_error_msg}}
<div class="message_auth error" id="message">
    <div>
        <i class="fa-solid fa-triangle-exclamation"></i>
        <h1>{{auth_error_msg}}</h1>
    </div>
    <i class="fa-solid fa-xmark" onclick="hide_message()"></i>
</div>
{{/if}}

{{#if auth_success_msg}}
<div class="message_auth success" id="message">
    <div>
        <i class="fa-solid fa-circle-check"></i>
        <h1>{{auth_success_msg}}</h1>
    </div>
    <i class="fa-solid fa-xmark" onclick="hide_message()"></i>
</div>
{{/if}}

{{#if auth_warning_msg}}
